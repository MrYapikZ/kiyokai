generator client {
  provider = "prisma-client-py"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MasterShot {
  id                String   @id @default(uuid())
  file_name         String   @unique
  file_path         String
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
  edit_user_id      String
  edit_user_name    String
  project_id        String
  project_name      String
  episode_id        String
  episode_name      String
  sequence_id       String
  sequence_name     String
  shot_id           String
  shot_name         String
  task_id           String
  task_name         String
  nas_server_id     String?

  nas_server NasServer? @relation(fields: [nas_server_id], references: [id])
  version_shots     VersionShot[]  @relation("MasterToVersions")

  @@unique([shot_id, task_id])
}

model VersionShot {
  id                String   @id @default(uuid())
  file_name         String   @unique
  file_path         String
  version_number    Int
  locked            Boolean @default(false)
  locked_by_user_id String?
  locked_by_user_name String?
  label             String?
  notes             String?
  program           String?
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
  edit_user_id      String
  edit_user_name    String
  project_id        String
  project_name      String
  episode_id        String
  episode_name      String
  sequence_id       String
  sequence_name     String
  shot_id           String
  shot_name         String
  task_id           String
  task_name         String
  master_shot_id    String

  master_shot       MasterShot  @relation("MasterToVersions", fields: [master_shot_id], references: [id], onDelete: Cascade)
  @@unique([file_name, file_path])
  @@unique([shot_id, task_id, version_number])
}

model NasServer {
  id          String   @id @default(uuid())
  name        String   @unique
  host        String
  protocol    String   @default("smb")
  port        Int?
  username    String?
  password    String?
  project_path String?
  drive_letter String? @db.Char(1)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  master_shots MasterShot[]
}
